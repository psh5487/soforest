<h1>소현's 소나무숲</h1><br>

<div class= "form">
<%= form_for @post do |f| %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %><br>
    <%= f.text_field :title, placeholder: '제목을 입력해주세요' %><br>
    <%= f.text_area :content, placeholder: '내용을 입력해주세요', rows: '5' %><br>
    <%= f.submit %>
<% end %>
</div>


<br>
<div id="outer">
<% @posts.each_with_index do |p, index| %>
     <div id="inner">
     #<%= index + 1 %>번째 올림<br>
     
     제목: <%= p.title %><br>
     내용: <%= p.content %><br>
     
     <%= link_to '수정하기', edit_post_path(p)%>
     <%= link_to '삭제하기', post_path(p), method: :delete, data: { confirm: '정말 삭제하시겠습니까?'} %>
     </div><br>
<% end %>
</div>
